    <ImageView
            android:id="@+id/bluetoothIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center" />

    <TextView
            android:id="@+id/bleStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awaiting Connection..."
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"/>


    <Button
            android:id="@+id/send_data_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start Data"/>

    <TextView
            android:id="@+id/accel_sum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:text="Acceleration Reading" android:textAlignment="center" android:textSize="24sp"
            android:paddingTop="30dp"/>

    <EditText
            android:id="@+id/accel_sum_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center"
            android:hint="Acceleration Value" android:numeric="signed|decimal" android:enabled="false"/>

    <TextView
        android:id="@+id/user_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:text="High Score" android:textAlignment="center" android:textSize="24sp"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/user_score_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:text="0" android:textAlignment="center" android:textSize="16sp"
        android:paddingTop="10dp"/>

